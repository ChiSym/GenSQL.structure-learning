#!/bin/bash -x

# This script for produces a zip-archive of the auto-modeling repo including
# documentation
script_base_dir=$(basename -- "$PWD")
# This script should be run from the inferenceql.auto-modeling root directory.
# Not from inside the bin/ directory or elsewhere.
if [ "$script_base_dir" != "inferenceql.auto-modeling" ]; then
    echo "Script must be run from the inferenceql.automodeling/ directory."
    exit 1
fi

package_dir='../InferenceQL/'

rm -rf ${package_dir}
mkdir -p ${package_dir}
cp -r . ${package_dir}

cd ${package_dir}
# Remove all untracked and ignored files and folders.
git clean -d -x -f
# Make a clean data dir.
mkdir data
mkdir documentation
cp -r ../openiql.github.io/build/site/* documentation/

pwd
cd ..

zip -r InferenceQL.v0.02.zip InferenceQL
rm -rf InferenceQL
